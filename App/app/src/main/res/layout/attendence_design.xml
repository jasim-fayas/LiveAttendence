<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center">

        <!-- Student Name -->
        <TextView
            android:id="@+id/textViewStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:text="Student Name" />

        <!-- First row for first three hours -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <!-- Subject 1 CheckBox -->
            <CheckBox
                android:id="@+id/checkBoxHour1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour 1" />

            <!-- Subject 2 CheckBox -->
            <CheckBox
                android:id="@+id/checkBoxHour2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour 2" />

            <!-- Subject 3 CheckBox -->
            <CheckBox
                android:id="@+id/checkBoxHour3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour 3" />
        </LinearLayout>

        <!-- Second row for fourth and fifth hours -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <!-- Subject 4 CheckBox -->
            <CheckBox
                android:id="@+id/checkBoxHour4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour 4" />

            <!-- Subject 5 CheckBox -->
            <CheckBox
                android:id="@+id/checkBoxHour5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hour 5" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
