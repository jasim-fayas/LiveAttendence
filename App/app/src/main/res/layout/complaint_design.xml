<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:backgroundTint="@color/white"
    tools:context=".ViewComplaint">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="200dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/custom_edittext">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/marketfresh"
                android:text="Complaint Title"
                android:translationY="25dp"
                android:textSize="15sp"></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/titleView"
                android:background="@drawable/coustom_edittext_white"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:fontFamily="@font/marketfresh"
                android:drawableLeft="@drawable/baseline_title_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/marketfresh"
                android:text="Complaint Content"
                android:translationY="10dp"
                android:textSize="15sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/detailsView"
                android:fontFamily="@font/marketfresh"
                android:background="@drawable/coustom_edittext_white"
                android:layout_marginTop="20dp"
                android:padding="8dp"

                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/marketfresh"
                android:text="Complaint Name"
                android:translationY="10dp"
                android:textSize="15sp"></TextView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/nameView"
                android:fontFamily="@font/marketfresh"
                android:background="@drawable/coustom_edittext_white"
                android:layout_marginTop="20dp"
                android:padding="8dp"

                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black"/>









        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>